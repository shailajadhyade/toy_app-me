
<p id="notice"><%= notice %></p>
 <div class="page-header left">
   <h1>Microposts</h1>
 </div>
<table>
  <thead>
    <tr>
      <th>Content<br><br></th>
      <th>User <br><br></th>
      <th>Username<br><br></th>
     
      <th colspan="3"><br><br></th>
    </tr>
  </thead>
<hr>
  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td style= "width:450px"><%= micropost.content %></td>
        <td style= "width:70px"><%= micropost.user_id %></td>
        <td style= "width:100px"><%= micropost.user.name %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<div class="rightlinks">
  <%= link_to 'New Micropost', new_micropost_path %> |
  <%= link_to 'View Users', users_path %> 
</div>
