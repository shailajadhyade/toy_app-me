
 <p id="notice"><%= notice %></p>
 <div>
 <p>
  <strong>User_ID:</strong>
  <%= @user.id %>
</p>
 <p>
    <strong>Name:</strong>
    <%= @user.name %>
 </p>
 <p>
  <strong>Email:</strong>
  <%= @user.email %>
 </p>
</div>
<hr>
    </div>

<div>
  
    <h4>Posts</h4>
  <% if @user.microposts.all %>
     
	 <p>
	    <% @user.microposts.each do |posts| %>
		<hr><%= posts.content %><br>
		<% end %>
	</p>
  
  <% elsif !(@user.microposts) %>
   <p>
   	  you don't have any posts
   </p>
 <% end %>
</div>
<div class="rightlinks">
     <%= link_to 'Edit', edit_user_path(@user) %> |
     <%= link_to 'Back', users_path %>
   </div>
<div style="float: right;padding-right: 18px">
<%= link_to 'create post', new_micropost_path %>
</div>